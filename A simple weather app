    <script>
        function ChangeCity() {
            let city = prompt("What city do you live in?");
            let temperature = prompt("What's the current temperature?");

            // Validate input
            if (city && temperature) {
                temperature = parseInt(temperature); // Convert to integer
                let h1 = document.querySelector("h1");
                if (temperature >= 19) {
                    h1.innerHTML = "ğŸŒ <br /> Currently " + temperature + "Â°C in " + city;
                } else {
                    h1.innerHTML = "ğŸ¥¶ <br /> Currently " + temperature + "Â°C in " + city;
                }
            } else {
                alert("Please enter a valid city and temperature.");
            }
        }
    </script>
